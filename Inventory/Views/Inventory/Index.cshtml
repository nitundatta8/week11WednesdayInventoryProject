@{

  Layout = "_Layout";

}

@using Inventory.Models;
@model List<Inventory.Models.Product>;



<h1>Products</h1>
@if (@Model.Count == 0)
{
  <h3>No products have been added yet!</h3>
} 

@foreach (Product product in Model)
{
  <li>@Html.ActionLink($"{product.Name}", "Details", new { id = product.ProductId })</li>
   
}

<p>@Html.ActionLink("Add new Product", "Create")</p>